                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        
                    <Button Content="Добавить фото" Width="200" Command="{Binding AddPhotoCommand}"  Margin="0"></Button>
                    <my:NavigationButton Data="{StaticResource DeletePathData}" Command="{Binding ClearPhotoCommand}"></my:NavigationButton>
                    </StackPanel>
                    <TextBlock Text="Штрих код"></TextBlock>
                    <my:TextBoxWithRemoved Uid="Введите штрих код" Text="{Binding Barcode}"
                                           x:Name="BarcodeCodeTextBox" Cursor="IBeam"></my:TextBoxWithRemoved>
                    <TextBlock Text="Артикул товара"></TextBlock>
                    <my:TextBoxWithRemoved Uid="Введите артикул товара" Text="{Binding Article}"
                                           x:Name="VendorCodeTextBox"></my:TextBoxWithRemoved>
                    <TextBlock Text="Наименование товара"></TextBlock>
                    <my:TextBoxWithRemoved Uid="Введите наименование товара" Text="{Binding Name}"
                                           x:Name="NameTextBox"></my:TextBoxWithRemoved>
                    <TextBlock Text="Описание товара"></TextBlock>
                    <my:TextBoxWithRemoved Uid="Введите описание товара" Text="{Binding Description}"
                                           x:Name="DescriptionTextBox"></my:TextBoxWithRemoved>
                </StackPanel>

                <StackPanel Margin="10 10 30 0">
                    <TextBlock Text="Стоимость товара"></TextBlock>
                    <my:TextBoxWithRemoved Uid="Введите стоимость" Text="{Binding Cost}"
                                           x:Name="CostTextBox"></my:TextBoxWithRemoved>
                    <TextBlock Text="НДС к цене"></TextBlock>
                    <my:TextBoxWithRemoved Uid="Введите НДС" Text="{Binding VAT}"
                                           x:Name="VATTextBox"></my:TextBoxWithRemoved>
                    <TextBlock Text="Категория товара"></TextBlock>
                    <ComboBox x:Name="CategoryComboBox" 
                              SelectedItem="{Binding Path= Категория}" 
                              SelectedIndex="{Binding Path=SelectedIndex, TargetNullValue=0,FallbackValue=0}"
                              SelectedValue="{Binding Path= Категория.Код}"
                              SelectedValuePath="Код"></ComboBox>
                    <TextBlock Text="Производитель товара"></TextBlock>
                    <ComboBox x:Name="ManufacturerComboBox" 
                              SelectedItem="{Binding Path= Производитель}" 
                              SelectedIndex="{Binding Path=SelectedIndex, TargetNullValue=0,FallbackValue=0}"
                              SelectedValue="{Binding Path= Производитель.Код}"
                              SelectedValuePath="Код"></ComboBox>
                    <TextBlock Text="Срок годности товара(дней)"></TextBlock>
                    <my:TextBoxWithRemoved Uid="Введите срок годности" Text="{Binding ExpirationDate}"
                                           x:Name="ExpirationDateTextBox" Cursor="IBeam"></my:TextBoxWithRemoved>
                    <TextBlock Text="Единица измерения"></TextBlock>
                    <ComboBox x:Name="UnitComboBox" 
                              SelectedItem="{Binding Path= ЕдиницаИзмерения}" 
                              SelectedIndex="{Binding Path=SelectedIndex, TargetNullValue=0,FallbackValue=0}"
                              SelectedValue="{Binding Path= ЕдиницаИзмерения.Код}"
                              SelectedValuePath="Код"></ComboBox>
                    <TextBlock Text="Вес единицы,кг"></TextBlock>
                    <my:TextBoxWithRemoved Uid="Введите вес нестандартной единицы товара" Text="{Binding Weight,TargetNullValue=0,FallbackValue=0}"
                                           x:Name="WeightTextBox"></my:TextBoxWithRemoved>
                    <TextBlock Text="Ширина при размещении"></TextBlock>
                    <my:TextBoxWithRemoved Uid="Введите ширину товара" Text="{Binding Width}"
                                           x:Name="WidthTextBox"></my:TextBoxWithRemoved>
                    <TextBlock Text="Высота при размещении"></TextBlock>
                    <my:TextBoxWithRemoved Uid="Введите высоту товара" Text="{Binding Height}"
                                           x:Name="HeightTextBox"></my:TextBoxWithRemoved>
                    <TextBlock Text="Высота при размещении"></TextBlock>
                    <my:TextBoxWithRemoved Uid="Введите глубину товара" Text="{Binding Depth}"
                                           x:Name="DepthTextBox"></my:TextBoxWithRemoved>
                    <TextBlock Text="Высота при размещении"></TextBlock>
                    <ComboBox  SelectedItem="{Binding Status}"
                               x:Name="StatusComboBox">
                        <ComboBoxItem Content="Не активен"></ComboBoxItem>
                        <ComboBoxItem Content="Активен"></ComboBoxItem>
                    </ComboBox>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="1" Background="#FFC7C7C7" VerticalAlignment="Bottom" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 20">
                <Button x:Name="AddProductButton" Content="Добавить товар" Command="{Binding }"></Button>
                <Button Content="Очистить все поля" x:Name="ClearInputFieldsButton" Click="ClearInputFieldsButton_Click"></Button>
                <Button Content="Назад" x:Name="GoBackButton" Click="GoBackButton_Click"></Button>
            </StackPanel>
